{
  "name": "kd-qatask",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtefehRadmand/KD-Qatask"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:wishlist": "playwright test playwright/e2e/wishlist.spec.ts",
    "test:login": "playwright test playwright/e2e/login.spec.ts",
    "test:basket": "playwright test playwright/e2e/basket.spec.ts",
    "test:checkout": "playwright test playwright/e2e/checkout.spec.ts",
    "test:registration": "playwright test playwright/e2e/registration.spec.ts",
    "docker:build": "docker build -t playwright-tests .",
    "docker:run": "docker run --rm -v $(pwd)/test-results:/app/test-results -v $(pwd)/playwright-report:/app/playwright-report playwright-tests",
    "docker:compose": "docker-compose up --build",
    "docker:compose:headed": "docker-compose up playwright-headed",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "playwright": "^1.55.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1"
  }
}